<!-- Navbar -->
<!-- Remove "fixed-top" class to make navigation bar scrollable with the page -->

<header class="header navbar navbar-expand-lg bg-light shadow-sm fixed-top">
    <div class="container px-3">
        <a href="index.html" class="navbar-brand pe-3">
            <%= image_tag "enviroment/self_serch.png", alt: "logo", width: 70 %>
        <%= link_to '自分、探してます', root_path, class: 'navbar-brand pe-3', width:47 %>
        <div id="navbarNav" class="offcanvas offcanvas-end">
            <div class="offcanvas-header border-top">
                <%= link_to new_user_path, class: 'btn btn-primary w-100' do %>
                <i class="bx bx-cart fs-4 lh-1 me-1"></i>
                会員登録
                <% end %>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                  <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><%= image_tag "enviroment/serch_card.png", alt: "logo", width: 50 %></a>
                  <div class="dropdown-menu">
                    <div class="d-lg-flex pt-lg-3">
                      <div class="mega-dropdown-column">
                        <h6 class="px-3 mb-2">WANTED</h6>
                        <ul class="list-unstyled mb-3">
                          <li><%= link_to "新規投稿", new_post_path, class: "dropdown-item py-1" %></li>
                          <li><%=  link_to "投稿一覧", posts_path, class: "dropdown-item py-1" %></li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </li>
                <li class="nav-item dropdown">
                  <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><%= image_tag "enviroment/user_logo.png", alt: "logo", width: 70 %></a>
                  <div class="dropdown-menu">
                    <div class="d-lg-flex pt-lg-3">
                      <div class="mega-dropdown-column">
                        <h6 class="px-3 mb-2">User</h6>
                        <ul class="list-unstyled mb-3">
                          <% if logged_in? %>
                            <li><%= link_to "マイページ", user_path(current_user), class: "dropdown-item py-1" %></li>
                            <li><%=  link_to "ログアウト", user_session_path, class: "dropdown-item py-1", data: {"turbo_method": :delete} %></li>
                          <% else %>
                            <li><%= link_to "ログイン", new_user_session_path, class: "dropdown-item py-1" %></li>
                            <li><%= link_to "会員登録", new_user_path, class: "dropdown-item py-1" %></li>
                        <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
        </div>
    </div>
</header>
